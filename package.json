{
  "name": "epic-jsx",
  "description": "React-compatible JSX renderer.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-jsx",
  "homepage": "https://tobua.github.io/epic-jsx",
  "license": "CC-BY-NC-4.0",
  "author": "Matthias Giger",
  "scripts": {
    "check": "biome check --write . && biome check --write --config-path=test ./test/*",
    "types": "tsc && tsc --project ./test/tsconfig.json"
  },
  "dependencies": {
    "@types/prop-types": "^15.7.14",
    "csstype": "^3.1.3",
    "logua": "^3.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@happy-dom/global-registrator": "^17.0.0",
    "@types/bun": "^1.2.2",
    "markdown-to-jsx": "^7.7.3",
    "typescript": "^5.7.3",
    "zero-configuration": "^0.18.0"
  },
  "trustedDependencies": [
    "zero-configuration"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./index.ts",
  "exports": {
    ".": "./index.ts",
    "./test": "./test.ts",
    "./jsx-runtime": "./index.ts",
    "./jsx-dev-runtime": "./index.ts"
  },
  "files": [
    "*.ts",
    "types/*.d.ts"
  ],
  "keywords": [
    "renderer",
    "jsx",
    "react",
    "client"
  ],
  "publishConfig": {
    "provenance": true
  },
  "configuration": {
    "gitignore": "recommended",
    "vscode": "biome",
    "license": "commercial",
    "biome": [
      {
        "extends": "epic",
        "linter": {
          "rules": {
            "complexity": {
              "noBannedTypes": "off"
            },
            "suspicious": {
              "noExplicitAny": "off"
            }
          }
        },
        "files": {
          "ignore": [
            "demo",
            "types",
            "test"
          ]
        }
      },
      {
        "folder": "test",
        "extends": "test",
        "linter": {
          "rules": {
            "a11y": {
              "noSvgWithoutTitle": "off",
              "useButtonType": "off"
            },
            "correctness": {
              "useJsxKeyInIterable": "off"
            },
            "complexity": {
              "noUselessFragments": "off"
            }
          }
        }
      }
    ],
    "typescript": [
      {
        "extends": "plugin",
        "compilerOptions": {
          "jsx": "react-jsx"
        },
        "files": [
          "index.ts",
          "test.ts"
        ]
      },
      {
        "extends": "plugin",
        "folder": "test",
        "compilerOptions": {
          "strict": false,
          "jsx": "react-jsx",
          "paths": {
            "react": [
              "./.."
            ],
            "react/jsx-dev-runtime": [
              "./.."
            ],
            "react/jsx-runtime": [
              "./.."
            ],
            "epic-jsx": [
              "./../index.ts"
            ]
          }
        }
      }
    ]
  }
}
