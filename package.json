{
  "name": "epic-jsx",
  "description": "React-compatible JSX renderer.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-jsx",
  "homepage": "https://tobua.github.io/epic-jsx",
  "license": "CC-BY-NC-4.0",
  "author": "Matthias Giger",
  "scripts": {
    "check": "biome check --write .",
    "types": "tsc"
  },
  "dependencies": {
    "logua": "^3.0.3",
    "svg-tag-names": "^3.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@happy-dom/global-registrator": "^14.12.3",
    "@types/bun": "^1.1.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.5.4",
    "zero-configuration": "^0.17.2"
  },
  "trustedDependencies": [
    "zero-configuration"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./index.ts",
  "exports": {
    ".": "./index.ts",
    "./test": "./test.ts",
    "./jsx-runtime": "./index.ts",
    "./jsx-dev-runtime": "./index.ts"
  },
  "files": [
    "*.ts"
  ],
  "keywords": [
    "renderer",
    "jsx",
    "react",
    "client"
  ],
  "publishConfig": {
    "provenance": true
  },
  "configuration": {
    "gitignore": "bundle",
    "vscode": "biome",
    "license": "commercial",
    "biome": {
      "extends": "recommended",
      "linter": {
        "rules": {
          "correctness": {
            "useJsxKeyInIterable": "off"
          },
          "a11y": {
            "noSvgWithoutTitle": "off"
          },
          "complexity": {
            "noBannedTypes": "off"
          },
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      },
      "files": {
        "ignore": [
          "demo"
        ]
      }
    },
    "typescript": [
      {
        "extends": "plugin",
        "compilerOptions": {
          "jsx": "react-jsx"
        },
        "files": [
          "index.ts",
          "test.ts"
        ]
      },
      {
        "extends": "plugin",
        "folder": "test",
        "compilerOptions": {
          "strict": false,
          "jsx": "react-jsx",
          "paths": {
            "react": [
              "./.."
            ],
            "react/jsx-dev-runtime": [
              "./.."
            ],
            "epic-jsx": [
              "./../index.ts"
            ]
          }
        }
      }
    ]
  }
}
