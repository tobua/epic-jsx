{
  "name": "epic-jsx",
  "description": "JSX renderer.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-jsx",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "build": "padua build",
    "start": "padua watch",
    "test": "vitest run"
  },
  "padua": {
    "tsconfig": {
      "compilerOptions": {
        "paths": {
          "react": [
            "."
          ]
        }
      }
    }
  },
  "devDependencies": {
    "@types/react": "^18.2.21",
    "happy-dom": "^10.11.0",
    "padua": "^2.0.3",
    "vitest": "^0.34.3"
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "renderer",
    "jsx",
    "react",
    "client"
  ],
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "jsx-a11y/click-events-have-key-events": 0,
      "jsx-a11y/no-noninteractive-element-interactions": 0,
      "react/no-deprecated": 0
    }
  },
  "publishConfig": {
    "provenance": false
  },
  "engines": {
    "node": ">= 16"
  }
}
